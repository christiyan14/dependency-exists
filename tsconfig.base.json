{
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "checkJs": true,
    "allowJs": true,
    "declaration": true,
    "declarationMap": false,
    "allowSyntheticDefaultImports": true,
    "sourceMap": false,
  },
  "include": [
    "./src/**/*",
  ],
  "exclude": [
    "dist",
    "bin",
    "node_modules"
  ]
}